@top Program { expression* }

@skip { space }

expression {
  Identifier |
  String |
  Integer |
  Boolean |
  Application { "(" expression* ")" }
}

@tokens {
  Identifier { $[a-zA-Z_\-0-9]+ }

  String { '"' (!["\\] | "\\" _)* '"' }

  Integer { $[0-9]+ }

  Boolean { "true" | "false" }

  space { $[ \t\n\r]+ }

  "(" ")"

  @precedence { Boolean, Identifier }
  @precedence { Integer, Identifier }
}

@detectDelim
